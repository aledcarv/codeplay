<%= form_with model: @course do |form| %>
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name %>
    <% @course.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
    <%end%>

    <%= form.label :description, 'Descrição' %>
    <%= form.text_field :description %>

    <%= form.label :code, 'Código' %>
    <%= form.text_field :code %>
    <% @course.errors.full_messages_for(:code).each do |message| %>
        <div><%= message %></div>
    <% end %>

    <%= form.label :price, 'Preço' %>
    <%= form.text_field :price %>
    <% @course.errors.full_messages_for(:price).each do |message| %>
        <div><%= message %></div>
    <% end %>

    <%= form.label :enrollment_deadline, 'Data limite de matrícula' %>
    <%= form.text_field :enrollment_deadline %>

    <%= form.submit 'Criar curso' %>
<% end %>