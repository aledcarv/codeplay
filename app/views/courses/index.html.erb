<% if @courses.empty? %>
    <p><%= t('.no_course') %></p>
<% end %>

<% @courses.each do |course| %>
    <h1><%= link_to course.name, course_path(course) %></h1>
    <p><%= course.description %></p>
    <p><%= number_to_currency course.price %></p>
<% end %>

<%= link_to t('.register_course'), new_course_path %>
<%= link_to t('.button_back'), root_path %>
