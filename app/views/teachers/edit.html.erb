<%= form_with model: @teacher do |form| %>
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name %>

    <%= form.label :email, 'Email' %>
    <%= form.text_field :email %>

    <%= form.label :bio, 'Bio' %>
    <%= form.text_field :bio %>

    <%= form.label :profile_picture, 'Foto' %>
    <%= form.file_field :profile_picture %>

    <%= form.submit 'Editar professor' %>

    <% @teacher.errors.each do |error| %>
        <%= error.full_message %>
    <% end %>
<% end %>